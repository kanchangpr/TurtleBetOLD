package com.jetbet.serviceImpl;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jetbet.bean.SportsBean;
import com.jetbet.betfair.ApiNGJRescriptDemo;
import com.jetbet.betfair.entities.CompetitionResult;
import com.jetbet.betfair.entities.EventResult;
import com.jetbet.betfair.entities.EventTypeResult;
import com.jetbet.dao.BetfairDao;
import com.jetbet.service.BetfairService;

@Service
public class BetfairServiceImpl implements BetfairService{
	
	@Autowired
	BetfairDao betfairDao;
	
	ApiNGJRescriptDemo rescriptDemo = new ApiNGJRescriptDemo();

	@Override
	public List<SportsBean> getListOfSports(String applicationKey, String sessionToken, String userName) {
		
		List<EventTypeResult> response=rescriptDemo.getlistOfEventType(applicationKey, sessionToken);
		
		final List<SportsBean> sportsBeanList = new ArrayList<SportsBean>();
		List<SportsBean> sportsBeanResponseList = new ArrayList<SportsBean>();
		response.stream().forEach(res -> {
			SportsBean sportsBean = new SportsBean();
			sportsBean.setSportsTypeId(res.getEventType().getId());
			sportsBean.setSportsName(res.getEventType().getName());
			sportsBean.setSportsMarketCount(res.getMarketCount());
			sportsBean.setSportsCreatedBy(userName);
			sportsBeanList.add(sportsBean);
		    });
		//sportsBeanResponseList=betfairDao.storeListOfEventTypesInDB(sportsBeanList);
		//return sportsBeanResponseList;
		return sportsBeanList;
	}

	@Override
	public List<CompetitionResult> getListOfSeries(String applicationKey, String sessionToken, String userName) {
		List<CompetitionResult> response=rescriptDemo.getlistOfComp(applicationKey, sessionToken);
		return response;
	}

	@Override
	public List<EventResult> getListOfMatches(String applicationKey, String sessionToken, String userName) {
		List<EventResult> response=rescriptDemo.getlistOfEvent(applicationKey, sessionToken);
		return response;
	}

}
